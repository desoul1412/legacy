-- L2M Item Spend - Extract specific item decreases
-- Item IDs: Key progression/currency items
-- Server filter: %140% (production servers)
SELECT
    ds AS report_date,
    actor_str3 AS user_id,
    actor_id AS role_id,
    actor_world AS server_id,
    actor_level AS role_level,
    entity_id AS item_id,
    use_num1 AS spend_amount
FROM iceberg.l2m.etl_decrease_item
WHERE actor_world LIKE '%140%'
    AND ds = DATE '{{logDate}}'
