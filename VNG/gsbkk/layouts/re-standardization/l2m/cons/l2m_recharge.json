{
  "description": "L2M Recharge CONS: Write recharge data to PostgreSQL (read directly from ETL, skip passthrough STD)",
  "comment": "Consolidates recharge transaction data into PostgreSQL analytics table",
  "inputSources": [
    {
      "name": "source_data",
      "type": "file",
      "path": "hdfs://c0s/user/gsbkk-workspace-yc9t6/l2m/etl/recharge/{logDate}",
      "format": "parquet"
    }
  ],
  "sqlTemplate": "templates/re-standardization/l2m/recharge_cons.sql.j2",
  "outputs": [
    {
      "type": "jdbc",
      "connection": "TSN_POSTGRES",
      "table": "public.recharge",
      "format": "parquet",
      "mode": "append",
      "deleteCondition": "ds = DATE '{logDate}'"
    }
  ]
}
